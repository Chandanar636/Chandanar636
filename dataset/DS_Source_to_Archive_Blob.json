{
	"name": "DS_Source_to_Archive_Blob",
	"properties": {
		"linkedServiceName": {
			"referenceName": "LA_Blobstorage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"Archivefilename": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "@dataset().Archivefilename",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat(formatDateTime(utcNow(),'yyyyMMdd'))",
					"type": "Expression"
				},
				"container": "archive"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "DEPARTMENT_ID",
				"type": "String"
			},
			{
				"name": "DEPARTMENT_NAME",
				"type": "String"
			},
			{
				"name": "MANAGER_ID",
				"type": "String"
			},
			{
				"name": "LOCATION_ID",
				"type": "String"
			}
		]
	}
}